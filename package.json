{
  "name": "video-sorter-manager",
  "version": "1.0.0",
  "description": "Electron app for classifying and exporting videos to USB",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "node -e \"const http = require('http'); const check = () => http.get('http://localhost:5173', (r) => { if(r.statusCode === 200) { require('child_process').spawn('npx', ['electron', '.'], {stdio: 'inherit', shell: true}); } else setTimeout(check, 500); }).on('error', () => setTimeout(check, 500)); check();\"",
    "build": "npm run build:vite ; npx electron-builder",
    "build:vite": "vite build",
    "package": "electron-builder --win",
    "preview": "vite preview"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.videosorter.app",
    "productName": "Video Sorter Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "dist/renderer/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "src/main/index.js"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}